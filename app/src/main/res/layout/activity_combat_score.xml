<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:background="@color/activity_background"
    tools:context="com.opencvapp.crist.atvr.CombatScore">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@color/activity_background"
        android:weightSum="1">

        <!-- Head button score -->
        <ImageButton
            android:layout_gravity="top|left"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/ic_head_b" />


        <!-- Punch button score -->
        <ImageButton
            android:layout_gravity="center|right"
            android:layout_marginRight="70dp"
            android:layout_marginTop="30dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/ic_punch" />

        <!-- Chest button score -->
        <ImageButton
            android:layout_gravity="end|left|bottom"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/ic_chest_b" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:background="@color/activity_background">

        <!-- Head button score -->
        <ImageButton
            android:layout_gravity="top|right"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@mipmap/ic_head_r" />

        <!-- Punch button score -->
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center|left"
            android:background="@mipmap/ic_punch"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp" />

        <!-- Chest button score -->
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/ic_chest_r"
            android:layout_marginTop="0dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="bottom|right" />

    </LinearLayout>

</LinearLayout>
