<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity_background"
    android:orientation="vertical"
    tools:context="com.opencvapp.crist.atvr.RefereeScore">

    <TextView
        android:id="@+id/label_name"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "/>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <NumberPicker
            style="@style/CustomNPStyle"
            android:id="@+id/unitNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="600px"
            android:minHeight="600px"
            android:layout_margin="10px"
            android:layout_weight="0.4">
        </NumberPicker>

        <NumberPicker
            style="@style/CustomNPStyle"
            android:id="@+id/decimalNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="600px"
            android:minHeight="600px"
            android:layout_margin="10px"
            android:layout_weight="0.4">
        </NumberPicker>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/score_tec"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:src="@mipmap/ok_arrow"
            app:backgroundTint="@color/button_ok_background"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </LinearLayout>

</LinearLayout>
